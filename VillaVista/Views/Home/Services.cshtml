@{
    ViewData["Title"] = "Services";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<h1 class="text-center mb-4">Our Services</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card-wrapper">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-calendar-check fa-4x text-primary mb-3"></i>
                <div class="card-body">
                    <h5 class="card-title text-dark">Facility Reservation</h5>
                    <p class="card-text text-muted">Reserve community facilities for private events and gatherings.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card-wrapper">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-credit-card fa-4x text-success mb-3"></i>
                <div class="card-body">
                    <h5 class="card-title text-dark">Billing & Payments</h5>
                    <p class="card-text text-muted">Easily manage and pay your dues through our secure online portal.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card-wrapper">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-user-shield fa-4x text-danger mb-3"></i>
                <div class="card-body">
                    <h5 class="card-title text-dark">Security & Visitor Pass</h5>
                    <p class="card-text text-muted">Request visitor passes and register vehicles for added security.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
.wrapper{
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f5f5f5;
    }
</style>