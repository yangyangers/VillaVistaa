﻿@{
    ViewData["Title"] = "Home";
}
    



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Villa Vista</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="wwwroot/css/site.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>

    <!-- Hero Section (Background Image + Overlay) -->
    <div class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-text">Your Home, Your Hub - Everything You Need in One Place!</h1>
                <a href="#" class="btn btn-light mt-3 px-4 py-2" data-bs-toggle="modal" data-bs-target="#signupModal">Get Started</a>
            </div>
        </div>
    </div>
    <style>
        body {
            background-image: url('/images/main.png'); /* Set your background */
            background-size: cover;
            background-position: center;
        }
    </style>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>