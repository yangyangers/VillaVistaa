@{
    ViewData["Title"] = "Facilities";
}

        <h1 class="text-center mb-4">Our Facilities</h1>

        <div class="row">
            <!-- Facility 1 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div id="facilityCarousel1" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/Facilities/f1-1.jpg" class="d-block w-100" alt="Facility 1 - Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/f1-2.jpg" class="d-block w-100" alt="Facility 1 - Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/f1-3.jpg" class="d-block w-100" alt="Facility 1 - Image 3">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/f1-4.jpg" class="d-block w-100" alt="Facility 1 - Image 3">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/f1-5.jpg" class="d-block w-100" alt="Facility 1 - Image 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#facilityCarousel1" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control-next" href="#facilityCarousel1" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Clubhouse</h5>
                        <p class="card-text">Our clubhouse offers a relaxing environment for social gatherings and community events.</p>
                    </div>
                </div>
            </div>

            <!-- Facility 2 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div id="facilityCarousel2" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/Facilities/sp/sp1.jpg" class="d-block w-100" alt="Facility 2 - Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/sp/sp2.jpg" class="d-block w-100" alt="Facility 2 - Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/sp/sp3.jpg" class="d-block w-100" alt="Facility 2 - Image 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#facilityCarousel2" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control-next" href="#facilityCarousel2" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Swimming Pool</h5>
                        <p class="card-text">Enjoy our spacious pool, perfect for leisure or fitness swimming.</p>
                    </div>
                </div>
            </div>

            <!-- Facility 3 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div id="facilityCarousel3" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/Facilities/sports/basket.jpg" class="d-block w-100" alt="Facility 3 - Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/sports/volley.jpg" class="d-block w-100" alt="Facility 3 - Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/Facilities/sports/badminton.jpg" class="d-block w-100" alt="Facility 3 - Image 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#facilityCarousel3" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control-next" href="#facilityCarousel3" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">BasketBall Court</h5>
                        <p class="card-text">A full-sized basketball court available for residents to enjoy games and practice.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .wrapper{
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f5f5f5;
    }
</style>
