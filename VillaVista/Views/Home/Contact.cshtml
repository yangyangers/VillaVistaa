@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <div class="contact-content mx-auto text-center">
        <h1 class="fw-bold">Get in Touch</h1>
        <p class="text-muted">
            To better serve you, kindly contact us to schedule a visit or discuss any inquiries, concerns, or questions you may have about owning a home at Celeste Prime.
        </p>

        <div class="mt-4">
            <h5 class="fw-bold"><i class="fas fa-clock text-primary"></i> BUSINESS HOURS</h5>
            <p class="text-muted">9:00 AM to 6:00 PM, Monday - Friday<br>Send Inquiry Form 24/7</p>
        </div>

        <div class="mt-4">
            <h5 class="fw-bold"><i class="fas fa-phone text-success"></i> CONTACT DETAILS</h5>
            <p class="text-muted">
                <a href="tel:+639706707777" class="text-decoration-none text-dark">+63 970 670 7777</a><br>
                <a href="mailto:username@villavista.ph" class="text-decoration-none text-dark">
                    <i class="fas fa-envelope"></i> username@villavista.ph
                </a>
            </p>
        </div>

        <div class="mt-4">
            <h5 class="fw-bold"><i class="fas fa-map-marker-alt text-danger"></i> FIND US HERE</h5>
            <p class="text-muted">11STU Avenir, Archbishop Reyes Ave,<br>Cebu City, Cebu 6000</p>
            
            <!-- Google Maps Embed -->
            <div class="mt-3">
                <iframe 
                    width="100%" 
                    height="250" 
                    frameborder="0" 
                    style="border:0; border-radius: 10px;" 
                    allowfullscreen 
                    src="https://www.google.com/maps/embed/v1/place?q=11STU%20Avenir,%20Archbishop%20Reyes%20Ave,%20Cebu%20City,%20Cebu%206000&key=YOUR_GOOGLE_MAPS_API_KEY">
                </iframe>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/documents/CommunityGuidelines.pdf" class="btn btn-primary shadow-sm" download>
                <i class="fas fa-file-pdf"></i> Download Community Guidelines
            </a>
        </div>
    </div>
</div>
<style>
    .contact-section {
    max-width: 600px;
    background: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.contact-content h1 {
    color: #333;
}

.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 8px;
}

.btn-primary:hover {
    background-color: #0056b3;
}
.wrapper{
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f5f5f5;
    }
</style>