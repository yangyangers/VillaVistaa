@{
    ViewData["Title"] = "Reservations";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            background-color: #e5e7da;
            color: #3b2f21;
        }

        .dashboard-container {
            padding: 20px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .reservation-header {
            background-color: #5a6e4f;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        .reservation-table {
            width: 100%;
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #ddd;
            font-weight: bold;
        }

        .btn-approve {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-cancel {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container-fluid dashboard-container">
        

        <!-- Admin Reservation Dashboard -->
        <div class="text-center mb-4">
            <h4>Admin Reservation Dashboard</h4>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <h6>Total Reservations:</h6>
                    <h3>30</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h6>Pending Approvals:</h6>
                    <h3>5</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h6>Canceled Reservations:</h6>
                    <h3>3</h3>
                </div>
            </div>
        </div>

        <!-- Homeowners Facility Reservations Table -->
