@{
    ViewData["Title"] = "Document Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            background-color: #e5e7da;
            color: black;
        }

        .dashboard-container {
            padding: 20px;
        }

        .header {
            background-color: #5a6e4f;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        .table-container {
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            color: black;
        }

        .table thead {
            background-color: #ddd;
            font-weight: bold;
        }

        .btn-download {
            background-color: #17a2b8;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-download:hover {
                background-color: #138496;
            }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>

    <div class="container-fluid dashboard-container">
       

        <div class="text-center mb-4">
            <h4>Document Management</h4>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Document Name</th>
                        <th>Uploaded By</th>
                        <th>Date Uploaded</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Homeowner Agreement</td>
                        <td>Claire Gabato</td>
                        <td>2025-03-15</td>
                        <td>
                            <button class="btn-download">Download</button>
                            <button class="btn-delete">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Property Rules</td>
                        <td>Vylette Rosell</td>
                        <td>2025-03-14</td>
                        <td>
                            <button class="btn-download">Download</button>
                            <button class="btn-delete">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Maintenance Report</td>
                        <td>Shaz Sam</td>
                        <td>2025-03-13</td>
                        <td>
                            <button class="btn-download">Download</button>
                            <button class="btn-delete">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
