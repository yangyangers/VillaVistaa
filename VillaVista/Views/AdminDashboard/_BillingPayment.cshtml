@{
    ViewData["Title"] = "Billing & Payment";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            background-color: #e5e7da;
            color: #3b2f21;
        }

        .dashboard-container {
            padding: 20px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .billing-header {
            background-color: #5a6e4f;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        .billing-table {
            width: 100%;
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #ddd;
            font-weight: bold;
        }

        .btn-paid {
            background-color: #726e33;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-remove {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container-fluid dashboard-container">
       

        <!-- Admin Billing Dashboard -->
        <div class="text-center mb-4">
            <h4>Admin Billing Dashboard</h4>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <h6>Total Dues:</h6>
                    <h3>100,000</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h6>Pending Payments:</h6>
                    <h3>30,000</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h6>Unpaid Bills:</h6>
                    <h3>70,000</h3>
                </div>
            </div>
        </div>

        <!-- Homeowners Billing Table -->
        <div class="billing-table">
            <h5 class="text-center mb-3">Homeowners Billing</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Homeowners</th>
                        <th>Lot #</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Alpha Bravo</td>
                        <td>Lot 12</td>
                        <td>35,000</td>
                        <td>2025-02-23</td>
                        <td>Pending</td>
                        <td><button class="btn-paid">Mark as Paid</button></td>
                    </tr>
                    <tr>
                        <td>Charlie Delta</td>
                        <td>Lot 13</td>
                        <td>35,000</td>
                        <td>2025-02-14</td>
                        <td>Paid</td>
                        <td><button class="btn-remove">Remove</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
