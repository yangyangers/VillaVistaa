@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            background-color: #e5e7da;
            color: #e5e7da;
        }

        .dashboard-container {
            padding: 20px;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .dashboard-header {
            background-color: #5a6e4f;
            color: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }

        .announcement-tag {
            background-color: #726e33;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
        }

        .facility-booking-time {
            font-weight: bold;
            color: #5a4f41;
        }
    </style>
</head>
<body>

    <div class="container-fluid dashboard-container">
       

        <div class="row">
            <!-- Search Bar -->
            <div class="col-12 mb-3">
                <input type="text" class="form-control" placeholder="Search reservations, documents, or billings">
            </div>
        </div>

        <div class="row">
            <!-- Active Residents -->
            <div class="col-md-3">
                <div class="card text-center">
                    <h5>Active Residents</h5>
                    <h3>156</h3>
                    <small>+3 this month</small>
                </div>
            </div>

            <!-- Pending Requests -->
            <div class="col-md-3">
                <div class="card text-center">
                    <h5>Pending Requests</h5>
                    <h3>8</h3>
                    <small>2 urgent</small>
                </div>
            </div>

            <!-- Revenue -->
            <div class="col-md-3">
                <div class="card text-center">
                    <h5>Revenue</h5>
                    <h3>187,000</h3>
                    <small>98% collected</small>
                </div>
            </div>

            <!-- Today's Bookings -->
            <div class="col-md-3">
                <div class="card text-center">
                    <h5>Today's Bookings</h5>
                    <h3>12</h3>
                    <small>2 facilities</small>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Recent Announcements -->
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <h5>Recent Announcements</h5>
                        <a href="#" class="text-decoration-none">Create New</a>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Pool Maintenance</strong>
                                <p class="mb-0">Monthly pool maintenance scheduled for next week</p>
                            </div>
                            <span class="announcement-tag">high</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Community Meeting</strong>
                                <p class="mb-0">Monthly meeting this Saturday.</p>
                            </div>
                            <span class="announcement-tag">medium</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Facility Bookings -->
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <h5>Today's Facility Bookings</h5>
                        <a href="#" class="text-decoration-none">Manage Bookings</a>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>Basketball Court</strong><br>
                                Deaven Villa
                            </div>
                            <span class="facility-booking-time">9:00-11:00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>Workout Gym</strong><br>
                                Deaven Villa
                            </div>
                            <span class="facility-booking-time">8:00-9:00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Upcoming Events -->
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <h5>Upcoming Events</h5>
                        <a href="#" class="text-decoration-none">Add Event</a>
                    </div>
                    <div class="mt-3">
                        <div class="p-2" style="background-color: #ddd; border-radius: 5px;">
                            <strong>Board Meeting</strong><br>
                            Meeting Room<br>
                            2025-02-22
                        </div>
                    </div>
                </div>
            </div>

            <!-- Service Requests -->
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <h5>Service Requests</h5>
                        <a href="#" class="text-decoration-none">View All</a>
                    </div>
                    <div class="mt-3">
                        <div class="p-2" style="background-color: #ddd; border-radius: 5px;">
                            <strong>Plumbing</strong><br>
                            Shaznay Lopez<br>
                            <span class="text-danger">In Progress</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
