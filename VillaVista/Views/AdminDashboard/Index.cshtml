@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            font-family: Times New Roman, sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #466450;
            color: white;
            padding: 20px;
            position: fixed;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 10px 0;
            }

                .sidebar a i {
                    font-size: 18px;
                    margin-right: 10px;
                }

                .sidebar a.active {
                    background-color: #3b4633;
                    border-radius: 5px;
                }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        #notificationDropdown {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.3s ease-in-out;
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center mb-4">VILLA VISTA</h4>
        <p class="text-center mb-4">Admin Dashboard</p>
        <a href="#" class="nav-link active" id="dashboard-link"><i class="bi bi-house-door"></i> Dashboard</a>
        <a href="#" class="nav-link" id="announcement-link"><i class="bi bi-megaphone"></i> Announcement</a>
        <a href="#" class="nav-link" id="billings-link"><i class="bi bi-cash-stack"></i> Billings & Payments</a>
        <a href="#" class="nav-link" id="reservation-link"><i class="bi bi-calendar-check"></i> Reservations</a>
        <a href="#" class="nav-link" id="document-link"><i class="bi bi-calendar-check"></i> Documents</a>
        <a href="#" class="nav-link" id="service-link"><i class="bi bi-tools"></i> Service Request</a>
        <a href="#" class="nav-link"id="usermanagement-link"><i class="bi bi-shield-check"></i> User Management</a>
        <form asp-controller="Home" asp-action="Index" method="post">
            @Html.AntiForgeryToken()
            <button type="submit"><i class="bi bi-box-arrow-left"></i>Logout</button>
        </form>
    </div>

    <!-- Top Right Icons -->
    <div style="position: fixed; top: 10px; right: 60px; z-index: 1050;">
        <i id="notificationBell" class="bi bi-bell-fill text-dark" style="font-size: 24px; cursor: pointer; margin-right: 20px;"></i>
        <i id="settingsIcon" class="bi bi-gear-fill text-dark" style="font-size: 24px; cursor: pointer;"></i>
    </div>

    <!-- Notification Dropdown -->
    <div id="notificationDropdown" style="display: none; position: fixed; top: 50px; right: 20px; width: 300px; background-color: #495641; color: white; padding: 15px; border-radius: 10px; z-index: 1050;">
        <div id="notificationContent">Loading...</div>
    </div>


    <!-- Dynamic Content Area -->
    <div class="content" id="main-content">
        @Html.Partial("_AdminDashboard")
    </div>

    <!-- AJAX for Dynamic Content -->
    <script>
        $(document).ready(function () {
            function loadView(viewName) {
                $.ajax({
                    url: "/AdminDashboard/LoadView?view=" + viewName,
                    type: "GET",
                    success: function (data) {
                        $("#main-content").html(data);
                    }
                });
            }

            // Load Admin Dashboard by default
            loadView("AdminDashboard");

            // Sidebar Click Events
            $("#dashboard-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("AdminDashboard");
            });

            $("#announcement-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("Announcement");
            });

            $("#billings-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("BillingPayment");
            });

            $("#reservation-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("Reservations");
            });

            $("#document-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("Documents");
            });

            $("#service-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("ServiceRequest");
            });

             $("#usermanagement-link").click(function (e) {
                e.preventDefault();
                $(".nav-link").removeClass("active");
                $(this).addClass("active");
                loadView("UserManagement");
            });

                    // Notification Bell Click
            $("#notificationBell").click(function () {
                $("#notificationDropdown").toggle();

                if ($("#notificationDropdown").is(":visible")) {
                    $.ajax({
                        url: "/AdminDashboard/LoadNotifications",
                        type: "GET",
                        success: function (data) {
                            $("#notificationContent").html(data);
                        },
                        error: function () {
                            $("#notificationContent").html("<p class='text-danger'>Error loading notifications.</p>");
                        }
                    });
                }
            });

            // Settings Icon Click
            $("#settingsIcon").click(function () {
                $(".nav-link").removeClass("active");
                loadView("AccountSettings"); // Make sure you have _AccountSettings.cshtml
            });
        });

    </script>

</body>
</html>
