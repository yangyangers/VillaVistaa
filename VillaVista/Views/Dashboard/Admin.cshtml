@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <h4 class="text-center mt-3">Admin Portal</h4>
                    <p class="text-center text-muted">Homeowners Association</p>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link active" href="#">📊 Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">👤 Residents</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">🛠️ Service Requests</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">💳 Payments</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">📅 Events</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">📢 Announcements</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">🔐 Access Control</a></li>
                    </ul>

                    <hr>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="#">⚙️ Settings</a></li>
                        <li class="nav-item">
                            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="nav-link text-danger border-0 bg-transparent">
                                     🚪 Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button class="btn btn-outline-secondary">⬅️ Return to Resident View</button>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-danger rounded-circle me-3">5</span>
                        <span class="fw-bold">👤 Admin User</span>
                    </div>
                </div>

                <h2 class="mt-3 fw-bold">Admin Dashboard</h2>

                <!-- Statistics Cards -->
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card p-3 shadow-sm">
                            <div class="d-flex align-items-center">
                                <span class="fs-3 text-primary">👥</span>
                                <div class="ms-3">
                                    <h3>248</h3>
                                    <p class="text-muted mb-0">Total Residents</p>
                                    <small class="text-success">+12 ↑ from last month</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card p-3 shadow-sm">
                            <div class="d-flex align-items-center">
                                <span class="fs-3 text-warning">📄</span>
                                <div class="ms-3">
                                    <h3>32</h3>
                                    <p class="text-muted mb-0">Open Requests</p>
                                    <small class="text-danger">-5 ↓ from last month</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card p-3 shadow-sm">
                            <div class="d-flex align-items-center">
                                <span class="fs-3 text-success">📅</span>
                                <div class="ms-3">
                                    <h3>8</h3>
                                    <p class="text-muted mb-0">Upcoming Events</p>
                                    <small class="text-success">+2 ↑ from last month</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card p-3 shadow-sm">
                            <div class="d-flex align-items-center">
                                <span class="fs-3 text-danger">🔔</span>
                                <div class="ms-3">
                                    <h3>15</h3>
                                    <p class="text-muted mb-0">Unread Reports</p>
                                    <small class="text-success">+7 ↑ from last month</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Service Requests -->
                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="fw-bold">Recent Service Requests</h4>
                        <button class="btn btn-outline-primary">View All</button>
                    </div>
                    <div class="card mt-2 p-3 shadow-sm">
                        <div class="d-flex align-items-center">
                            <span class="fs-5 text-primary">🛠️</span>
                            <div class="ms-3">
                                <h5 class="mb-0">Broken sprinkler system</h5>
                                <small class="text-muted">John Smith • 2 hours ago</small>
                            </div>
                            <span class="badge bg-warning ms-auto">In Progress</span>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS (Optional for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
