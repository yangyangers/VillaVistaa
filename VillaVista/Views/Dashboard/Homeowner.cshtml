@{
    ViewData["Title"] = "Homeowner Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container-fluid">
    <!-- Sidebar -->
    <div class="row">
        <nav class="col-md-2 d-md-block sidebar shadow-sm">
            <div class="position-sticky">
                <h5 class="mt-3 text-center">Welcome back!</h5>
                <ul class="nav flex-column mt-3">
                        <ul class="nav flex-column mt-3">
                            <li class="nav-item"><a class="nav-link active load-content" href="#" data-url="/Dashboard/Index"><i class="bi bi-house-door"></i> Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/Account/Manage"><i class="bi bi-person"></i> Account Management</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/ServiceRequest/Index"><i class="bi bi-tools"></i> Service Requests</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/Billing/Index"><i class="bi bi-credit-card"></i> Payments</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/Events/Index"><i class="bi bi-calendar-event"></i> Community Events</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/Forum/Index"><i class="bi bi-chat-left-dots"></i> Community Forum</a></li>
                            <li class="nav-item"><a class="nav-link load-content" href="#" data-url="/Documents/Index"><i class="bi bi-file-earmark-text"></i> Documents & FAQs</a></li>
                            <hr>
                            <li class="nav-item">
                                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link text-danger border-0 bg-transparent">
                                        🚪 Logout
                                    </button>
                                </form>
                            </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
            <main class="col-md-10 px-4">
                <nav class="navbar navbar-expand-lg navbar-light shadow-sm p-3">
                    <a class="navbar-brand fw-bold" href="#">🏡 Homeowners Portal</a>
                </nav>
            <style>
                .nav-link{
                       color: mintcream;
                    }
                .col-md-2{
                        background-color: #466450;
                    }
                .navbar{
                        background-color: #e5e7da;
                    }
                .col-md-10{
                        background-color: #f5f5f5;
                    }
                
                .card-body{
                        background-color: #e5e7da;

                    }
                .btn-dark{
                        background-color: #f5f5f5;
                        color: #495057;
                    }
            </style>
            <!-- Dashboard Content -->
            <div class="row mt-4">
                <!-- Announcements -->
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">📢 Announcements</h5>
                            <p class="text-muted">Stay updated with the latest community news</p>

                            <div class="alert alert-light border">
                                <strong>Community Pool Maintenance</strong> <span class="badge bg-danger">Important</span><br>
                                <small class="text-muted">Jun 15, 2023</small>
                                <p class="mt-2">The community pool will be closed for maintenance from June 20-22...</p>
                                <a href="#" class="text-decoration-none">Read More</a>
                            </div>

                            <div class="alert alert-light border">
                                <strong>Annual HOA Meeting</strong><br>
                                <small class="text-muted">Jun 30, 2023</small>
                                <p class="mt-2">Join us for the annual HOA meeting on June 30 at 7:00 PM...</p>
                                <a href="#" class="text-decoration-none">Read More</a>
                            </div>

                            <button class="btn btn-outline-dark w-100">View All Announcements</button>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions & Payment Summary -->
                <div class="col-md-4">
                    <!-- Quick Actions -->
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">⚡ Quick Actions</h5>
                            <div class="row text-center">
                                <div class="col-4">
                                    <button class="btn btn-light w-100"><i class="bi bi-clipboard-check"></i><br> Service Request</button>
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-light w-100"><i class="bi bi-credit-card"></i><br> Make Payment</button>
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-light w-100"><i class="bi bi-person-circle"></i><br> Account Details</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Summary -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">💳 Payment Summary</h5>
                            <p class="text-muted">Next Payment Due</p>
                            <h3 class="fw-bold">$250.00</h3>
                            <p class="text-danger">Due: Jun 15, 2023</p>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-dark" style="width: 75%;">75%</div>
                            </div>
                            <button class="btn btn-dark w-100">Pay Now</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Community Events -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold">📅 Community Events</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="text-muted">March 2025</p>
                        <button class="btn btn-sm btn-outline-dark"><i class="bi bi-chevron-left"></i></button>
                        <button class="btn btn-sm btn-outline-dark"><i class="bi bi-chevron-right"></i></button>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="calendar border p-3 rounded">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>Su</th>
                                        <th>Mo</th>
                                        <th>Tu</th>
                                        <th>We</th>
                                        <th>Th</th>
                                        <th>Fr</th>
                                        <th>Sa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td>1</td>
                                        <td>2</td>
                                        <td>3</td>
                                        <td>4</td>
                                        <td>5</td>
                                        <td>6</td>
                                    </tr>
                                    <tr>
                                        <td>7</td>
                                        <td>8</td>
                                        <td>9</td>
                                        <td class="bg-dark text-white">10</td>
                                        <td>11</td>
                                        <td>12</td>
                                        <td>13</td>
                                    </tr>
                                    <tr>
                                        <td>14</td>
                                        <td>15</td>
                                        <td>16</td>
                                        <td>17</td>
                                        <td>18</td>
                                        <td>19</td>
                                        <td>20</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <p class="text-center text-muted">No events scheduled for this date</p>
                </div>
            </div>

        </main>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".load-content").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");

                // Indicate loading
                $("#contentArea").html("<p>Loading...</p>");

                // Load content using AJAX
                $.get(url, function (data) {
                    $("#contentArea").html(data);
                });
            });
        });
    </script>

</body>