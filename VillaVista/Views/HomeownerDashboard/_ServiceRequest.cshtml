
<div id="staff-dashboard">
    <h3 class="mb-4">Staff Dashboard</h3>
    <div class="row">
        <!-- Total Staff -->
        <div class="col-md-3">
            <div class="card text-white bg-primary p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people-fill fs-2 me-3"></i>
                    <div>
                        <h5>4</h5>
                        <p>Total Staff</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Staff -->
        <div class="col-md-3">
            <div class="card text-white bg-success p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-check-fill fs-2 me-3"></i>
                    <div>
                        <h5>3</h5>
                        <p>Active Staff</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inactive Staff -->
        <div class="col-md-3">
            <div class="card text-white bg-danger p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-x-fill fs-2 me-3"></i>
                    <div>
                        <h5>1</h5>
                        <p>Inactive Staff</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Requests -->
        <div class="col-md-3">
            <div class="card text-white bg-warning p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clipboard-check fs-2 me-3"></i>
                    <div>
                        <h5>23</h5>
                        <p>Total Requests</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="mt-4">
        <input type="text" class="form-control" placeholder="Search staff...">
    </div>

    <!-- Staff List -->
    <table class="table mt-3">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Status</th>
                <th>Department</th>
                <th>Events</th>
                <th>Requests</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>John Doe</td>
                <td>Manager</td>
                <td class="text-success">Active</td>
                <td>Admin</td>
                <td>5</td>
                <td>8</td>
            </tr>
            <tr>
                <td>Jane Smith</td>
                <td>Security</td>
                <td class="text-danger">Inactive</td>
                <td>Security</td>
                <td>2</td>
                <td>3</td>
            </tr>
            <tr>
                <td>Alice Brown</td>
                <td>Maintenance</td>
                <td class="text-success">Active</td>
                <td>Maintenance</td>
                <td>4</td>
                <td>5</td>
            </tr>
            <tr>
                <td>Bob White</td>
                <td>Treasurer</td>
                <td class="text-success">Active</td>
                <td>Finance</td>
                <td>6</td>
                <td>7</td>
            </tr>
        </tbody>
    </table>
</div>
