@{
    ViewData["Title"] = "Billing & Payment";
}

<div class="billing-container">
    <div class="billing-header">
        <h2>BILLING & PAYMENT</h2>
        <div class="header-right">
            <i class="bi bi-bell"></i>
            <i class="bi bi-person-circle"></i>
        </div>
    </div>

    <div class="billing-content">
        <div class="balance-info">
            <div class="balance-box">
                <strong>Total Balance</strong>
                <p>Total Balance:<br> <span>$500,000.00 - Jan.</span></p>
            </div>
            <div class="due-box">
                <strong>Due Amount</strong>
                <p>$20,000</p>
                <strong>Due Date</strong>
                <p>March 5, 2025</p>
            </div>
            <div class="graph-box">
                <img src="~/images/bar-graph-placeholder.png" alt="Graph" class="graph-img">
            </div>
        </div>

        <div class="payment-history">
            <strong>Payment History</strong>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount Paid</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Feb. 26, 2025</td>
                        <td>$10,000.00</td>
                        <td>Credit Card (8***)</td>
                        <td>Completed</td>
                    </tr>
                    <tr>
                        <td>Jan. 26, 2025</td>
                        <td>$10,000.00</td>
                        <td>Paypal</td>
                        <td>Completed</td>
                    </tr>
                    <tr>
                        <td>Dec. 26, 2025</td>
                        <td>$5,000.00</td>
                        <td>Gcash</td>
                        <td>Completed</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Times New Roman', sans-serif;
        background-color: #EDECE6;
        margin: 0;
        padding: 0;
    }

    .billing-container {
        max-width: 900px;
        margin: 20px auto;
        background-color: #6B7258;
        padding: 20px;
        border-radius: 10px;
        color: white;
    }

    .billing-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        height: 40px;
    }

    .header-right i {
        margin-left: 10px;
        font-size: 20px;
    }

    .billing-content {
        background-color: white;
        padding: 15px;
        border-radius: 8px;
        color: black;
    }

    .balance-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        padding: 10px;
    }

    .balance-box, .due-box {
        background: #f5f5f5;
        padding: 15px;
        border-radius: 8px;
        width: 30%;
    }

    .graph-box {
        width: 30%;
    }

    .graph-img {
        width: 100%;
        border-radius: 8px;
    }

    .payment-history {
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #D9D7C8;
        font-weight: bold;
    }
</style>
